{% extends 'base.html.twig' %}

{% block title %}Hello PlateformeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="PlateformeWrapper">
  {% for Plateforme in LesPlateformes %}
      <div class="card mb-3, plateformeCard">
        <h3 class="card-header">{{Plateforme.nom}}</h3>
        <div class="card-body, plateformeMarque">
          <h5 class="card-title">{{Plateforme.idMarque.nom}}</h5>
        </div>
        <img class="plateformeImg" src="/assets/Plateformes/{{Plateforme.image}}">
      </div>
  {% endfor %}
  <div class="card mb-3, plateformeCard">
    {{ form_start(FormPlateforme) }}
      <h3 class="card-header">{{ form_row(FormPlateforme.nom) }}</h3>
      <div class="card-body, plateformeMarque">
        <h5 class="card-title">{{ form_row(FormPlateforme.idMarque) }}</h5>
      </div>
      <div class="card-body, plateformeMarque">
        <h5 class="card-title">{{ form_row(FormPlateforme.image) }}</h5>
      </div>
      <div>{{ form_row(FormPlateforme.valider) }}</div>
    {{ form_end(FormPlateforme) }}
  </div>
</div>
{% endblock %}
